@model IEnumerable<BugTracker_Web.Models.Dto.BugDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Bug List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Bug" asp-action="CreateBug" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>Create New Bug</a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Status
        </th>
        <th>
            Date Created
        </th>
        <th>
            UserId
        </th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Status</td>
                    <td>@item.DateCreated.ToShortDateString()</td>
                    <td>@item.UserId</td>
                    <td>
                        <a asp-controller="Bug" asp-action="UpdateBug" asp-route-bugId="@item.Id" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Bug" asp-action="DeleteBug" asp-route-bugId="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                    </td>
                </tr>
        }
    </tbody>
</table>