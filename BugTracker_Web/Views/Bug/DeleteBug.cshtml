@model BugTracker_Web.Models.Dto.BugDTO

<form asp-action="DeleteBug">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary"> Delete Bug</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">

            <div class="col-2">
                <label asp-for="Title" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Title" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled class="form-control" rows="5"></textarea>
            </div>

            <div class="col-2">
                <label asp-for="Status" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="Status" disabled asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>
            </div>

            <div class="col-2">
                <label asp-for="UserId" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserId" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="DateCreated" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DateCreated" disabled class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexBug" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-check control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}