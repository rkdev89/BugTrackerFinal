@model BugTracker_Web.Models.Dto.UserUpdateDTO

<form asp-action="UpdateUser">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary"> Update User</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="UserName" class="control-label pt-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexUser" asp-controller="User" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-success form-check control" />
            </div>
        </div>
    </div>
</form>
